<%= form_for @recipe do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :servings %>
<%= f.text_field :servings %>
<br>
<%= f.label :cook_time %>
<%= f.text_field :cook_time %>
<br>
<%= f.label :prep_time %>
<%= f.text_field :prep_time %>
<br>
<%= f.submit "Add Ingredients", class: "add-ingredients"%>
<% end %>