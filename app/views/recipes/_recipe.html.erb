<%= form_for @recipe do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :servings %>
<%= f.text_field :servings %>
<br>
<%= f.label :cook_time %>
<%= f.text_field :cook_time %>
