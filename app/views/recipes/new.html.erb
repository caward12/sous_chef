<div class="container">
  <h4>Create New Recipe</h4>
  <div class="create-recipe">
    <%= render partial: 'recipe' %>
  </div>

  <div class="create-ingredients">
    <h5> Add ingredients </h5>
    
      <%= form_tag('ingredient', remote: true, class: "ingredient-form") do |f| %>
        <div class="ingredients">
          <%= render partial: 'ingredients' %>
        </div>
        <br>
        <a href="javascript:;" id="addNewIngredient">Add Another Ingredient</a>
        <%= submit_tag "Add Instructions", class: "add-instructions" %>
      <% end %>

      <div style="display: none;" id="new_ingredients_form">
        <%= render partial: "ingredients" %>
      </div>
  </div>

  <div class="create-instructions">
    <h5>Add instructions</h5>
  </div>

  <div class="create-categories">
    <h5>Add categories</h5>
  </div>
</div>