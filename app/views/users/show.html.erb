<div class="container">
</div>

<div class="row ">

   <div class="col s3  sidebar">
     <h5 tabindex="0">Welcome <%= @user.first_name %></h5>
     <br>
     <div tabindex="0">
       <%= button_to "See All Recipes", recipes_path, method: :get, class: "waves-effect waves-light btn red" %>
     </div>
     <br>
     <div tabindex="0">
       <%= button_to "Create New Recipe", new_recipe_path, method: :get, class: "waves-effect waves-light btn red" %>
     </div>
   </div>
<br>
  <% @recipes.each do |recipe| %>
   <div class="col m4 s12">
     <div class="col s9">
       <div class="card">
         <div class="card-content">
           <strong><%= link_to recipe.name, recipe_path(recipe) %></strong><br>
           Servings: <%= recipe.servings %>
         </div>
         <div class="card action">
           <% recipe.categories.each do |category| %>
           <div class="chip"><%=category.name%></div>
           <% end %>
         </div>
       </div>
     </div>
   </div>
   <% end %>

 </div>